<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4A1515"
        android:text="종합 문제"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    문제"
        android:textColorHint="#6454a4"
        app:boxStrokeWidth="2dp"
        android:padding="5dp">
        <AutoCompleteTextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:editable="false"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:id="@+id/total_question"
            tools:ignore="Deprecated" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edge">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="①"
                android:textSize="30dp"
                android:gravity="left|center"
                android:layout_weight="10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" "
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/total_answer1"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edge_1">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="②"
                android:gravity="left|center"
                android:textSize="30dp"
                android:layout_weight="10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" "
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/total_answer2"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edge_1">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="③"
                android:gravity="left|center"
                android:textSize="30dp"
                android:layout_weight="10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" "
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/total_answer3"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edge_1">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="④"
                android:gravity="left|center"
                android:textSize="30dp"
                android:layout_weight="10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/black"
                android:id="@+id/total_answer4"
                android:textSize="20dp" />
        </FrameLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="다음 문제"
        android:id="@+id/total_next"
        android:textSize="20dp"
        android:background="@color/black"
        android:layout_margin="10dp"/>
</LinearLayout>
<!--
문제 : total_question
정답 : total_answer1~4
다음문제 버튼 : total_next
-->